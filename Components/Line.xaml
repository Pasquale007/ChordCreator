<UserControl x:Class="ChordCreater.Components.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChordCreater.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="X" Click="ClearLine" Visibility="Collapsed" Name="ClearButton" Grid.Column="0" FontSize="10"/>
        <TextBlock Name="Number" Background="LightGray" TextAlignment="Right" Grid.Column="0"/>
        <TextBox Name="Text" Grid.Column="1" FontFamily="Courier New"/>
    </Grid>
</UserControl>
